{
  "name": "@mec/cli",
  "version": "0.1.0",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "scripts": {
    "lint": "eslint",
    "tsc": "tsc --noEmit",
    "build": "tsc",
    "with-env": "dotenv -e ../../.env --",
    "with-remote-env": "dotenv -e ../../.env.remote -e ../../.env --",
    "env:from-cdk": "npm run with-env ts-node src/commands/envFromCdk.ts",
    "fixtures:load": "npm run with-env ts-node src/commands/loadFixtures.ts",
    "remote:fixtures:load": "npm run with-remote-env ts-node src/commands/loadFixtures.ts",
    "remote:admin-data:update": "npm run with-remote-env ts-node src/commands/updateAdministrativeData.ts",
    "admin-data:download:epci": "ts-node src/commands/downloadEpciData.ts",
    "admin-data:download:perimeters": "ts-node src/commands/downloadAideTerritoiresData.ts",
    "admin-data:download:municipalities": "ts-node src/commands/downloadMunicipalitiesData.ts",
    "admin-data:download:categories": "ts-node src/commands/downloadCategoryData.ts",
    "admin-data:download": "npm run admin-data:download:epci && npm run admin-data:download:municipalities && npm run admin-data:download:categories",
    "admin-data:update": "npm run with-env ts-node src/commands/updateAdministrativeData.ts",
    "admin-data:setup": "npm run admin-data:download && npm run admin-data:update"
  },
  "engines": {
    "node": ">=19",
    "npm": ">=8"
  },
  "dependencies": {
    "@mec/web": "*",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "typescript": "^4.9.4"
  }
}
